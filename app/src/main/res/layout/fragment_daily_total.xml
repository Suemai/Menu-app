<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.menu_app.fragment.DailyTotalFragment">

    <TextView
            android:id="@+id/daily_total_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Total"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

    <TextView
            android:id="@+id/daily_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_total_txt"
            android:text="Total Price"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10sp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_total_price"
            android:layout_alignParentBottom="true"
            android:layout_margin="15sp"/>

</RelativeLayout>